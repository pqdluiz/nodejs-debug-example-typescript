{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "skipFiles": ["<node_internals>/**"],
      "runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
      "program": "${workspaceFolder}\\index.ts",
      "outFiles": ["${workspaceFolder}/**/*.js"],
      "args": ["-r", "ts-node/register", "${relativeFile}"],
      "cwd": "${workspaceRoot}",
      "remoteRoot": "${workspaceFolder}",
    }
  ]
}
